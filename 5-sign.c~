#include "main.h"
#include <stdio.h>
/**
* print_sign - raccourci fonction principale
* @n: imprimer le signe d'un nombre
* Return: 0 si 0, 1 si +, -1 si -
*/
int print_sign(int n)
{
	if (n > 0)
	{
		_putchar('+');
		return (1);
	}
	if (n == 0)
	{
		_putchar('0');
                return (0);
	}
	if (n < 0)
	{
		_putchar('-');
                return (-1);
	}
	return (0);
}
